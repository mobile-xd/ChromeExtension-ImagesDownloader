{
   "browser_action": {
      "default_icon": "./icon/icon_128.png",
      "default_popup": "./page/popup.html"
   },
   "description": "找出页面中所有或者当前类型的图片，并提供按分辨率过滤图片，简单实用～",
   "icons": {
      "128": "./icon/icon_128.png",
      "16": "./icon/icon_128.png",
      "48": "./icon/icon_128.png"
   },
   "manifest_version": 2,
   "name": "图片批量下载",
   "permissions": [ 
      "tabs",
      "downloads",
      "<all_urls>",
      "contextMenus",
      "http://*/",
      "https://*/",
      "activeTab",
      "notifications"
   ],
   "background": {
      "scripts": [
         "./js/background.js"
      ]
   },
   "version": "0.4"
}
