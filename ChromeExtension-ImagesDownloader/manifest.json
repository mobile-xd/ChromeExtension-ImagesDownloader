{
   "browser_action": {
      "default_icon": "./icon/icon_128.png",
      "default_popup": "./page/popup.html"
   },
   "description": "Download images!",
   "icons": {
      "128": "./icon/icon_128.png",
      "16": "./icon/icon_128.png",
      "48": "./icon/icon_128.png"
   },
   "manifest_version": 2,
   "name": "Images Downloader",
   "permissions": [ 
      "tabs",
      "downloads",
      "<all_urls>",
      "contextMenus",
      "http://*/",
      "https://*/",
      "activeTab",
      "notifications"
   ],
   "background": {
      "scripts": [
         "./js/background.js"
      ]
   },
   "version": "0.5"
}
